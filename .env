# ================================================
# .env file for FrankStack Node.js backend server
# FrankStack - Environment Variables
# 
# Author: Edoardo Sabatini
# Date: 03 November 2025
# ================================================

# ---------- OLLAMA (AI CORE) ----------
OLLAMA_HOST=frankstack-ollama
OLLAMA_PORT=11434
CONTAINER_MODELS_DIR=/root/.ollama/models
# ================================================

# ---------- NODE SERVER ----------
REQUEST_TIMEOUT_MS=150000
WS_AI_SERVER_DEBUG=true
NODE_ENV=production
NODE_PORT=3000
ORCHESTRATOR_URL=http://localhost:4000
DEFAULT_PROVIDER=ollama
CHATGPT_MODEL=gpt-4o
TEMPERATURE=0.5
# ================================================

# ---------- STRIPE SERVER ----------
STRIPE_PORT=4000
STRIPE_SECRET_KEY=dummy_key_for_local
STRIPE_WEBHOOK_SECRET=dummy_webhook
STRIPE_CANCEL_URL=http://localhost:4000/cancel
STRIPE_SUCCESS_URL=http://localhost:4000/success
# ================================================  

# ---------- S3 SERVER ----------
S3_SERVER_PORT=3007
# ================================================  

# -----------------------------------------------
# End of .env file
